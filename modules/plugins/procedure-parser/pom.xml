<project>
    <modelVersion>4.0.0</modelVersion>

    <!--groupId>biz.redsoft</groupId-->
    <artifactId>procedure-parser</artifactId>
    <version>1.0</version>
    <dependencies>
        <dependency>
            <groupId>org.antlr</groupId>
            <artifactId>antlr4-runtime</artifactId>
            <version>${antlr.version}</version>
        </dependency>
    </dependencies>

    <parent>
        <groupId>org.executequery</groupId>
        <artifactId>RedExpert-parent</artifactId>
        <version>2024.11</version>
        <relativePath>../../../pom.xml</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-compile</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.antlr</groupId>
                <artifactId>antlr4-maven-plugin</artifactId>
                <version>${antlr.version}</version>
                <configuration>
                    <sourceDirectory>${pom.basedir}/../../../src/org/underworldlabs/procedureParser</sourceDirectory>
                    <outputDirectory>${pom.basedir}/../../../src/org/underworldlabs/procedureParser</outputDirectory>
                    <visitor>true</visitor>
                    <arguments>
                        <argument>-package</argument>
                        <argument>org.underworldlabs.procedureParser</argument>
                    </arguments>
                </configuration>
                <executions>
                    <execution>
                        <id>antlr</id>
                        <goals>
                            <goal>antlr4</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>